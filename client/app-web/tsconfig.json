{
  "extends": "../../tsconfig.json",
  "references": [
    { "path": "../ui-kit-legacy-shared" },
    { "path": "../ui-kit-legacy-branded" },
    { "path": "../../schema" },
  ],
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "*": ["src/types/*", "../ui-kit-legacy-shared/src/types/*", "*"],
    },
    "jsx": "react",
    "rootDir": ".",
    "outDir": "out",
    "plugins": [
      {
        "name": "ts-graphql-plugin",
        "schema": "../../cmd/frontend/graphqlbackend/schema.graphql",
        "tag": "gql",
      },
    ],
  },
  "include": ["**/*", ".*", "./src/**/*.json"],
  "exclude": ["../../node_modules", "./node_modules", "./out", "src/end-to-end", "src/regression", "src/integration"],
}
