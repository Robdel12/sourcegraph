{
  "extends": "../../tsconfig.json",
  "references": [
    { "path": "../ui-kit-legacy-shared" },
    { "path": "../ui-kit-legacy-branded" },
    { "path": "../../schema" },
  ],
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "*": ["src/types/*", "../ui-kit-legacy-shared/src/types/*", "*"],
    },
    "jsx": "react",
    "resolveJsonModule": true,
    "rootDir": ".",
    "outDir": "out",
    "plugins": [
      {
        "name": "ts-graphql-plugin",
        "schema": "../../cmd/frontend/graphqlbackend/schema.graphql",
        "tag": "gql",
      },
    ],
  },
  "include": ["**/*", ".*", "src/**/*.json", "src/types/**/*.d.ts"],
  "exclude": [
    "out",
    "node_modules",
    "code-intel-extensions",
    "../../node_modules",
    "./build/**/*",
    "coverage",
    "stories", // TODO fix type errors and include
    "src/end-to-end",
  ],
}
